<%= render partial: 'layouts/errors', locals:{object: @market}%>
<% if @harvest %>
    <h2> Add a Market Offer for <%= @harvest.cannabis_plant.strain.name %>:</h2>
<% else %>
    <h2>Add a Market Offer </h2>
<% end %>

<%= form_for(@market) do |f| %>
<% if params[:harvest_id] %>
    <%= f.hidden_field :harvest_id %>
<% else %>
    <div>
        <%= f.label :harvest_id, "Select a Harvest" %>
        <%= f.collection_select :harvest_id, Harvest.all, :id, :weight_of_flowers, include_blank: true %>
    </div>
<% end %>

<div>
    <%= f.label :amount_for_sale %>
    <%= f.text_field :amount_for_sale %>
</div>

<div>
    <%= f.label :asking_price %>
    <%= f.text_field :asking_price %>
</div>

<%= f.submit %>

<% end %>